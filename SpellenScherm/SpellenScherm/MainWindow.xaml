            <Label x:Name="scoreName2" Content="Score: 0" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="55" Width="268" Background="#5D689A" FontSize="36" FontFamily="Viner Hand ITC" Grid.ColumnSpan="2"/>
        </Grid>
        <Grid x:Name="set1" HorizontalAlignment="Left" Height="54" Margin="34,242,0,0" VerticalAlignment="Top" Width="580" Background="#29387C">
            <TextBox x:Name="nameEnter1" HorizontalAlignment="Left" Height="34" Margin="45,10,0,0" TextWrapping="Wrap" Text="Player 1" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.311,0.552" Background="#3C4986"  Grid.ColumnSpan="2"/>
